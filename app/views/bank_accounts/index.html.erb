<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Accont Number</th>
      <th scope="col">Balance</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
   <div id="clients">
    <% @bank_accounts.each do |bank_account|%>
      <tr>
        <th scope="row">1</th>
        <td><%= bank_account.account_number %></td>
        <td><%= number_to_currency(bank_account.balance, unit:"R$")%></td>
        <td><%= link_to "Show",bank_account_path(bank_account.id),class: "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>